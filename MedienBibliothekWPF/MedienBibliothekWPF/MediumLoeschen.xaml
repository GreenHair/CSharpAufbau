<Window x:Class="MedienBibliothekWPF.MediumLoeschen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedienBibliothekWPF"
        mc:Ignorable="d"
        Title="Medium Löschen" Height="200" Width="300">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Name="abbrechen" Width="100" Margin="10" Click="abbrechen_Click">Abbrechen</Button>
            <Button Name="loeschen" Width="100" Margin="10" Click="loeschen_Click">Löschen</Button>
        </StackPanel>
        <TextBox Name="message" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="20"
                 Background="AntiqueWhite" TextWrapping="Wrap" IsReadOnly="True" Text="Test"/>
    </DockPanel>
</Window>
